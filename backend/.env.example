# Database Configuration
# For local development with Docker:
DATABASE_URL="postgresql://scribbly:scribbly@localhost:5432/scribbly?schema=public"
# For Supabase (production):
# DATABASE_URL="postgresql://postgres.[your-project-ref]:[password]@aws-1-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1"
SKIP_PRISMA=false

# Google Cloud Platform
GCP_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=./gcp-service-account.json
VERTEX_AI_LOCATION=us-central1

# Elasticsearch Configuration
ELASTICSEARCH_URL=https://your-deployment.es.region.gcp.elastic.cloud:443
ELASTICSEARCH_API_KEY=your-elasticsearch-api-key-here

# AI Features
ENABLE_CONVERSATIONAL_SEARCH=true
EMBEDDING_MODEL=text-embedding-004
EMBEDDING_DIMENSIONS=768

# Server Configuration
PORT=3001
NODE_ENV=development

# Legacy OpenAI (if using OpenAI instead of Vertex AI)
# OPENAI_API_KEY=your-openai-api-key

# AWS Cognito (if needed for authentication)
# AWS_REGION=us-east-1
# COGNITO_USER_POOL_ID=your-pool-id
# COGNITO_CLIENT_ID=your-client-id
# COGNITO_DOMAIN=your-cognito-domain
# COGNITO_REDIRECT_URI=http://localhost:3000/auth/callback
# COGNITO_LOGOUT_URI=http://localhost:3000
